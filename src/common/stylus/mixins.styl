$green = #02a774
$yellow = #F5A100
$bc = #e4e4e4
//清楚浮动
clearFix()
    &::after 
        content ""
        display block
        clear both

//一像素下边框
bottom-border-1px($color)
    position relative
    &:after 
        content ""
        position absolute
        left 0
        bottom 0
        width 100%
        height 1px
        background-color $color
        transform scaleY(.5)

//一像素上边框
border-top-1px($color)
    position relative
    &:before
        content ""
        position absolute
        left 0px
        top 0px
        z-index 200
        width 100%
        height 1px
        background-color $color
        transform scaleY(0.5)//dpr像素比的设置，不然手机里面显示2像素
    
//根据像素比缩放1px像素边框
@media only screen and (-webkit-device-pixel-ratio: 2)
    .border-1px
        &::before
            transform scaleY(.5)

@media only screen and (-webkit-device-pixel-ratio: 3)
    .border-1px
        &::before
            transform scaleY(.333333)       
//根据像素比来使用2x图和3x图
bg-image($url)
    background-image url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ratio : 3), (min-device-pixel-ratio : 3)
        background-image url($url + "@3x.png")

